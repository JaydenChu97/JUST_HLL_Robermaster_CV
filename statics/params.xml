<?xml version="1.0" encoding="UTF-8"?>

<!--> 程序运行静态参数设定 </!-->
<opencv_storage>
    <!--灯柱筛选条件-->
    <armour_detector>
        <angleRange> 20 </angleRange>
        <minArea> 20 </minArea>
        <maxHeightWidthRat> 8 </maxHeightWidthRat>
        <minHeightWidthRat> 1 </minHeightWidthRat>
        <inRangePercent> 0.7 </inRangePercent>
        <outRangePercent> 0.2 </outRangePercent>
        <armourPixelAvg> 60 </armourPixelAvg>
    </armour_detector>

    <!--摄像头参数-->
    <camera_parameter>
        <brightness> -23 </brightness>
        <contrast> 9 </contrast>
        <hue> 4 </hue>
        <saturation> 60 </saturation>
        <pan> 6 </pan>
        <gamma> 96 </gamma>
        <white_balance_red_v> 5400 </white_balance_red_v>
        <backlight> 1 </backlight>
        <gain> 0 </gain>
        <exposure> -7 </exposure>
     </camera_parameter>

    <!--图像hsv三通道阈值参数-->
    <image_preprocessor_threshod>
        60 80 200 255 180 255
    </image_preprocessor_threshod>
</opencv_storage>
